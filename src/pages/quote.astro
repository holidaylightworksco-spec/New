---
import Base from "../layouts/BaseLayout.astro";
---
<Base title="Get My Custom Quote — Holiday Lightworks Co.">
  <section class="section"><div class="container"><h1>Get My Custom Quote</h1>
    <form name="quote" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/thank-you">
      <input type="hidden" name="form-name" value="quote" />
      <p hidden><label>Don’t fill this out if you’re human: <input name="bot-field" /></label></p>
      <label>Name<input name="name" required /></label>
      <label>Address<input name="address" required placeholder="Street, City, ZIP" /></label>
      <label>Phone<input name="phone" type="tel" required /></label>
      <label>Email<input name="email" type="email" required /></label>
      <label>Notes (optional)<textarea name="notes" rows="4"></textarea></label>
      <button class="btn" type="submit">Request Quote</button>
    </form></div></section>
</Base>